<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".TaskActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="282dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="465dp"
        android:fontFamily="@font/sabrina_italic"
        android:text="@string/textGresya"
        android:textColor="@color/white"
        android:textSize="250dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBrowse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonExplore"
        android:layout_width="145dp"
        android:layout_height="196dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="292dp"
        android:text="@string/buttonExploreGresya"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#2D628F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="145dp"
        android:layout_height="196dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="@string/buttonGallery"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#2D628F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonExplore"
        app:layout_constraintTop_toTopOf="@+id/buttonExplore" />

    <Button
        android:id="@+id/buttonRestaurant"
        android:layout_width="145dp"
        android:layout_height="196dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="124dp"
        android:text="@string/buttonRestaurant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#2D628F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNews"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNews"
        android:layout_width="145dp"
        android:layout_height="196dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="92dp"
        android:text="@string/buttonNews"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#2D628F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.875" />

    <Button
        android:id="@+id/buttonBrowse"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginBottom="27dp"
        android:text="@string/buttonBrowse"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#2D628F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>